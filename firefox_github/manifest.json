{
  "manifest_version": 2,
  "name": "GitHub PR Comment Copy for AI",
  "version": "0.2",
  "description": "Adds a button to copy PR review comments + code snippet into an AI-friendly prompt.",
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png"
  },
  "browser_action": {
    "default_title": "PR Copy for AI",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png"
    }
  },
  "background": {
    "scripts": [
      "shared.js",
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/*/pull/*",
        "https://github.com/*/*/pull/*/files"
      ],
      "js": [
        "shared.js",
        "contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
